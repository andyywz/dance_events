<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>P</th>
      <th>H</th>
      <th>T</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="event in events | filter:search">
      <td>{{event.name}}</td>
      <td>{{event.price}}</td>
      <td>
        <span class="glyphicon glyphicon-{{event.paid | checkmark}}"></span>
      </td>
      <td>
        <span class="glyphicon glyphicon-{{event.housing | checkmark}}"></span>
      </td>
      <td>
        <span class="glyphicon glyphicon-{{event.transport | checkmark}}"></span>
      </td>
      <td>
        <button class="btn btn-danger btn-xs" ng-click="deleteEvent(event)">
          <span class="glyphicon glyphicon-trash"></span>
        </button>
        <button class="btn btn-success btn-xs" ng-click="updateEvent(event)" data-target="#modal" data-toggle="modal">
          <span class="glyphicon glyphicon-edit"></span>
        </button>
      </td>
    </tr>
  </tbody>
</table>
